<div class='container'>
  <div class='row'>
    <h4>レビュー内容詳細</h4>
    <div class='col-5 mx-auto'>
      <%= image_tag @reviewer_comment.reviewer.get_profile_image, size:"200x200" %>
    </div>
    <div class='col-7 mx-auto'>
      <table class="table ml-0">
        <tr>
          <td class="border border-0" scope="col" width="200"><h5>投稿者</h5></td>
          <td class="border border-0"><%= @reviewer_comment.reviewer.nickname %></td>
        </tr>
        <tr>
          <td class="border border-0"><h5>レビュー詳細</h5></td>
          <td class="border border-0"><%= @reviewer_comment.body %></td>
        </tr>
        <tr>
          <td class="border border-0" scope="col" width="200"><h5>投稿日時</h5></td>
          <td class="border border-0"><%= @reviewer_comment.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td class="border border-0"><h5>評価</h5></td>
          <td class="border border-0">
            <% if @reviewer_comment.star_rate == 1.0 %>
                ★☆☆☆☆
              <% elsif @reviewer_comment.star_rate == 2.0 %>
                ★★☆☆☆
              <% elsif @reviewer_comment.star_rate == 3.0 %>
                ★★★☆☆
              <% elsif @reviewer_comment.star_rate == 4.0 %>
                ★★★★☆
              <% elsif @reviewer_comment.star_rate == 5.0 %>
                ★★★★★
            <% end %>
          </td>
        </tr>
        <tr>
          <td class="border border-0"><h5>タグ</h5></td>
          <td class="border border-0">
            <% @shop.tags.each do |tag| %>
              <%= tag.name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td class="border border-0"></td>
          <td class="border border-0">
            <% if @reviewer_comment.reviewer == current_reviewer || admin_signed_in? %>
              <%= link_to "編集", edit_shop_reviewer_comment_path(@shop, @reviewer_comment), class: "btn btn-sm btn-success mr-2" %>
              <%= link_to "削除", shop_reviewer_comment_path(@shop,@reviewer_comment), data: { confirm: '本当に削除しますか？' }, method: :delete, class: "btn btn-sm btn-danger ml-2" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>