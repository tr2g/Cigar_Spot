<div class='container px-5 px-sm-0'>
  <div class='row'>
    <h5 class='mt-3'>会員情報の編集</h5>

    <%= form_with model: current_reviewer, url: reviewer_information_path, method: :patch, local: true do |f| %>

    <div class="field">
          <%= f.label :nickname, "ニックネーム" %><br>
          <%= f.text_field :nickname, autofocus: true, class: "nickname rounded" %>
        </div>
        <div class="no_edit">
          <%= f.label :birthday, "生年月日" %><br>
          <%= @reviewer.birthday %><br>
          ※生年月日は変更できません
        </div>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br>
          <%= f.email_field :email, autofocus: true, class: "email rounded" %>
        </div>
        <div class="actions">
          <%= f.submit "変更内容を保存", class: "btn btn-sm btn-secondary rounded" %>
        </div>
      <% end %>
      <%= link_to "退会する", reviewer_unsubscribe_path, class: "btn btn-danger" %>
  </div>
</div>