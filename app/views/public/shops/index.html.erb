<div class='container'>
    <div clas='row'>
        <div class='mx-auto col-10'>
            <h4>登録店舗一覧</h4>
              <table>
                  <thead>
                      <tr>
                          <th scope="col" width="25%"></th>
                          <th scope="col" width="25%">店名</th>
                          <th scope="col" width="25%">店舗住所</th>
                        </tr>
                  </thead>

                  <tbody>
                      <% @shops.each do |shop| %>
                      <tr>
                        <td>
                          <%= link_to shop_path(shop) do %>
                            <%= image_tag shop.get_shop_image, size: '50x50' %>
                          <% end %>
                        </td>
                        <td><%= shop.name %></td>
                        <td><%= shop.address %></td>
                      </tr>
                      <% end %>
                  </tbody>
              </table>
        </div>
    </div>
</div>
