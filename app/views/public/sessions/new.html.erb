<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col mt-3'>
    <h2>Log in</h2>
      <%= form_with model: @reviewer, url: reviewer_session_path, local: true do |f| %>

        <table>
          <tr>
            <th><%= f.label :email, "E-mail" %></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded" %></td>
          </tr>
          <tr>
            <th><%= f.label :password, "PassWord" %></th>
            <td><%= f.password_field :password, autocomplete: "current-password", class: "rounded" %></td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit "Log in!", class: "btn btn-secondary" %></td>
          </tr>
        </table>
      <% end %>

      <h6>会員登録がお済みでない方は<%= link_to "こちら", new_reviewer_registration_path %></h6>
    </div>
  </div>
</div>