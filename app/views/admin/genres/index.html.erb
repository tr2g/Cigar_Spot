<div class='container px-5 px-sm-0'>
  <div class='row'>
      <h4>店舗ジャンル一覧・追加</h4>
      <div class='col-xs-3'>
        <%= form_with model: @genre, url: admin_genres_path(@genre.id), method: :post do |f| %>
          <%= f.label :name, 'ジャンル名' %> <br>
          <%= f.text_field :name, class: 'form-control' %> <br>
          <%= f.submit 'ジャンルを追加', class: 'btn btn-primary btn-block' %>
        <% end %>
      </div>
      <div class='col-xs-9'>
        <table>
          <thead>
            <tr>
            <th>ジャンル名</th>
            <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集', edit_admin_genre_path(genre.id), class: 'btn-sm btn-primary' %>
                  <%= link_to '削除', admin_genre_path(genre.id), class: 'btn-sm btn-danger', method: :delete %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>