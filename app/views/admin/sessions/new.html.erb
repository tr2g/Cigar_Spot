<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col mt-3'>
      <h2>管理者ログイン</h2>
      <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
        <div class="field">
          <%= f.label :email, "E-mail" %><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded" %>
        </div>
        <div class="field">
          <%= f.label :password, "PassWord" %><br>
          <%= f.password_field :password, autocomplete: "current-password", class: "rounded" %>
        </div>
        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "admin/shared/links" %>